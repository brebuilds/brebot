# Brebot Configuration File
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Configuration
# =============================================================================
# Local LLM via Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Alternative: OpenAI (if you prefer cloud-based)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# =============================================================================
# CrewAI Configuration
# =============================================================================
# Agent behavior settings
AGENT_VERBOSE=True
AGENT_MAX_ITER=3
AGENT_MEMORY=True

# =============================================================================
# File Organization Settings
# =============================================================================
# Default directories for file organization
DEFAULT_WORK_DIR=/Users/bre/Desktop
DEFAULT_ORGANIZED_DIR=/Users/bre/Desktop/Organized
DEFAULT_BACKUP_DIR=/Users/bre/Desktop/Backup

# File organization rules
MAX_FILES_PER_FOLDER=50
CREATE_BACKUP=True
DRY_RUN=False

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/brebot.log
LOG_MAX_SIZE=10MB
LOG_RETENTION=7

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_COMPOSE_FILE=docker/docker-compose.yml
OLLAMA_CONTAINER_NAME=brebot-ollama
OLLAMA_PORT=11434

# =============================================================================
# LlamaIndex Configuration
# =============================================================================
# Knowledge base settings
VECTOR_STORE_PATH=./data/vector_store
CHUNK_SIZE=1024
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# =============================================================================
# Security
# =============================================================================
# API keys and sensitive data
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
